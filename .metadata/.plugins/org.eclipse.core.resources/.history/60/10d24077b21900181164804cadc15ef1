package algorithms;

public class FirstBadVersion {
	
	public int firstBadVersion(int n) 
    {
        if(n <= 1)
            return n;
        
        int lo = 1, hi = n;
        
        while(lo < hi)
        {
            int mid = (lo + hi)/2;
            
            if(isBadVersion(mid))
            {
                if(mid == n)
                    return n;
                if(!isBadVersion(mid + 1))
                    return mid;
                else
                    lo = mid + 1;
            }
            else
                hi = mid-1;
        }
        return -1;
    }
	
	private boolean isBadVersion(int n)
	{
		if(n==1)
			return true;
		return false;
	}

}
