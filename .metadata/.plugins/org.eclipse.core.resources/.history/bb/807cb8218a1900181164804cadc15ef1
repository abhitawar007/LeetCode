package algorithms;
import java.util.*;

public class TaskScheduler 
{
	public int leastInterval(char[] tasks, int n) 
	{
		// Initialization
		int t = tasks.length;
		int[] store = new int[26];

		// Base condition
		if(t <= 1 || n==0)
			return t;

		for(int i=0; i<t; i++)
			store[tasks[i] - 'A']++;

		Arrays.sort(store);

		List<Integer> list = new ArrayList<>();

		for(int i=0; i<n; i++)
			list.add(-1);

		int count = 0;

		while(store[25] > 0)
		{
			for(int i=25; i>=0; i--)
			{
				if(store[i] == 0)
					break;

				if(list.contains(store[i]))
					continue;
				else
				{
					list.add(n-1, store[i]);
					store[i]--;
					break;
				}
			}
			count++;
			list.remove(0);
		}

		return count;
	}
}
